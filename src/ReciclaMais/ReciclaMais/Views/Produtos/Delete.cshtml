@model ReciclaMais.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover Produto</h1>

<h3>Tem certeza de que deseja remover esse produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PontuacaoUnitaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PontuacaoUnitaria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-info" asp-action="Index">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
